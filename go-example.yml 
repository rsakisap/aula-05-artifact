name: Go Example Workflow


on:
  push:
    branches:
      - main 

jobs:
  build-go:
    name: Build Go for Linux and Windows
    runs-on: ubuntu-latest  # Definir o runner

    env:
      FILE_NAME: hello-server  # Definindo a variável de ambiente

    steps:
      # Step 1: Fazer o checkout do repositório
      - name: Checkout repository
        uses: actions/checkout@v2

      # Step 2: Build do Go para Linux
      - name: Build Go for Linux
        run: go build ${{ env.FILE_NAME }}.go  

      # Step 3: Build do Go para Windows
      - name: Build Go for Windows
        run: GOOS=windows GOARCH=amd64 go build ${{ env.FILE_NAME }}.go  
- name: Upload artifact for linux
 uses: actions/upload-artifact@v1.0.0
 with:
 name: linux
 path: ./${{ env.FILE_NAME }}- name: Upload artifact for windows
 uses: actions/upload-artifact@v1.0.0
 with:
 name: windows
 path: ./${{ env.FILE_NAME }}.exe
 name: Go Example Workflow

# Evento de push e agendamento para a execução do workflow
on:
  push:
    branches:
      - main
  schedule:
    - cron: '*/15 * * * 1-6'  # A cada 15 minutos, de segunda a sábado

jobs:
  build-go:
    name: Build Go
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2
      # Step para o build conforme foi definido no exercício anterior.

  download-and-run-linux:
    name: Download and run Linux
    runs-on: ubuntu-latest
    needs: build-go  # O job só será executado após a conclusão do build-go
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Download Linux artifact
        uses: actions/download-artifact@v3
        with:
          name: linux  # Nome do artefato gerado no job anterior

      - name: Run script on Linux
        run: source ./run.sh  # Executa o script no sistema operacional Linux

  download-only-windows:
    name: Download Windows
    runs-on: windows-latest
    needs: build-go  # O job só será executado após a conclusão do build-go
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Download Windows artifact
        uses: actions/download-artifact@v3
        with:
          name: windows  # Nome do artefato gerado no job anterior
